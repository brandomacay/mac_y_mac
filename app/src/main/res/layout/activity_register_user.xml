<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="macay.maceda.reloj.checador.RegisterUserActivity">
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:background="@android:color/white"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Switch
            android:id="@+id/user_blocked_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end|center_vertical"
            android:text="@string/bloqueado" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/foto"
                    android:adjustViewBounds="true"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/add_photo_r"
                    android:layout_width="50dp"
                    android:layout_height="189dp"
                    android:layout_margin="7dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:tint="@android:color/white"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/add_camera"
                    tools:targetApi="o" />

            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                android:id="@+id/register_user_name_et"
                android:hint="@string/nombres"
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/register_user_lastname_et"

                    android:hint="@string/apellidos"
                    android:inputType="textCapSentences"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView

                    android:id="@+id/register_user_birthday_tv"
                    style="?android:attr/spinnerStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nacimiento"
                    android:layout_gravity="center"
                    android:textSize="16dp"

                    android:padding="10dp"
                    android:layout_marginTop="0dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <EditText
            android:id="@+id/register_user_password_et"

            android:hint="@string/pin_acceso"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/register_user_email_et"

            android:hint="@string/correo"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/register_user_phone_et"

            android:hint="@string/numero_celular"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/register_user_address_et"
            android:inputType="textCapSentences"

            android:hint="@string/direccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/register_user_ocupation_et"

            android:hint="@string/cargo"
            android:inputType="textCapSentences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/register_user_area_et"

            android:hint="@string/area_tra"
            android:inputType="textCapSentences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/register_user_started_date_tv"
            style="?android:attr/spinnerStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/contrato"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:padding="10dp"
            android:layout_marginTop="0dp" />
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
