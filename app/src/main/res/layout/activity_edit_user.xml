<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="macay.maceda.reloj.checador.RegisterUserActivity">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Switch
                android:id="@+id/user_blocked_switch"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="end|center_vertical"
                android:text="Bloqueado" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp">
                    <ImageView
                        android:id="@+id/user_edit_foto"
                        android:background="@drawable/persona"
                        android:adjustViewBounds="true"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/add_photo"
                        android:layout_width="50dp"
                        android:layout_height="189dp"
                        android:layout_margin="7dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:clickable="true"
                        android:tint="@android:color/white"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/add_camera"
                        tools:targetApi="o" />

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/nombres"
                        android:hint="Nombres"
                        android:inputType="textCapWords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        />

                    <EditText
                        android:id="@+id/apellidos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/floatingActionButton"
                        android:layout_marginTop="11dp"
                        android:hint="Apellidos"
                        android:inputType="textCapSentences"
                        />
                    <TextView
                        android:id="@+id/fecha_nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha de nacimiento"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:layout_marginTop="0dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/password"
                android:hint="Pin o contraseÃ±a"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/correo"
                android:hint="Correo electronico"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/numero_celular"
                android:hint="Celular"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/direccion"
                android:hint="Direccion"
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/cargo"
                android:hint="Cargo en la empresa"
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/area"

                android:hint="Departamento o area"
                android:inputType="textCapSentences"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/trabajo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de contrato"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:padding="10dp"
                android:layout_marginTop="0dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>