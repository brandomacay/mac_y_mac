<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="macay.maceda.reloj.checador.RegisterUserActivity">
    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@android:color/white"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/user_edit_foto"
                    app:srcCompat="@drawable/ic_account_circle"
                    android:layout_gravity="start"
                    android:adjustViewBounds="true"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/nombres"
                        android:hint="Nombres"
                        android:inputType="textPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/apellidos"
                        android:hint="Apellidos"
                        android:inputType="textPersonName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/fecha_nacimiento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha de nacimiento"
                        android:layout_gravity="center"
                        android:textSize="16dp"
                        android:padding="10dp"
                        android:layout_marginTop="0dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <EditText
                android:id="@+id/correo"
                android:hint="Correo electronico"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/numero_celular"
                android:hint="Celular"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/direccion"
                android:hint="Direccion"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/cargo"
                android:hint="Cargo en la empresa"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/area"

                android:hint="Departamento o area"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/trabajo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha de contrato"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:padding="10dp"
                android:layout_marginTop="0dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>